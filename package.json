{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "E-commerce backend API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "seed:admin": "node src/seeder/adminUser.js",
    "seed:permissions": "node src/seeder/permission.js",
    "seed:all": "npm run seed:admin && npm run seed:permissions",
    "watchDoc": "nodemon --watch src/ -e js src/config/swagger/swagger.js",
    "dev": "concurrently \"npm run seed:all\" \"nodemon src/app.js\" \"npm run watchDoc\"",
    "test": "jest --detectOpenHandles",
    "test:user": "jest src/tests/user.test.js --detectOpenHandles",
    "test:watch": "jest --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.2",
    "swagger-autogen": "^2.23.7",
    "swagger-ui-express": "^5.0.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4"
  }
}
